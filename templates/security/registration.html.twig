{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription sur le site</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_row(form.username, {'label':'Username','attr' : {'placeholder':'Votre username','class':'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.email, {'label':'Adresse Email','attr' : {'placeholder':'Adresse Email','class':'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.typeclient, {'label':'Quel type d\'utilisateur vous êtes ?','attr' : {'placeholder':'Quel type d\'utilisateur vous êtes ?','class':'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.password, {'label':'Mot de passe','attr' : {'placeholder':'Mot de passe','class':'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.confirm_password, {'label':'Confirmation de mdp','attr' : {'placeholder':'Confirmation de mdp','class':'form-control'}}) }}
    </div> 
    <div class="form-group">
        <input type="submit" value="Enregistrer" class="btn btn-success">
    </div>   
    
    

    
    {{ form_end(form) }}

{% endblock %}
