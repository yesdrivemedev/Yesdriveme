{% extends 'base.html.twig' %}

{% block body %}
    <h1>Changer mot de Mot de passe</h1>

    {{ form_start(form) }}

   
    <div class="form-group">
        {{ form_row(form.password, {'label':'Mot de passe','attr' : {'placeholder':'Mot de passe','class':'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.confirm_password, {'label':'Confirmation du mot de passe','attr' : {'placeholder':'Confirmation du mot de passe','class':'form-control'}}) }}
    </div> 
    <div class="form-group">
        <input type="submit" value="Modifier mot de passe" class="btn btn-success">
    </div>   
    
    

    
    {{ form_end(form) }}


{% endblock %}
